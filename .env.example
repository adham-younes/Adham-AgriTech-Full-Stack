# ===========================================
# Adham AgriTech - Environment Variables Example
# ===========================================
# 
# نسخ هذا الملف إلى .env.local واملأ القيم الفعلية
# cp .env.example .env.local

# ===========================================
# DATABASE & AUTHENTICATION
# ===========================================

# Supabase (مطلوب - يعمل)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# EXTERNAL APIs
# ===========================================

# OpenWeather (مطلوب - بيانات الطقس)
OPENWEATHER_API_KEY=your-openweather-api-key-here

# OpenAI (مطلوب - الذكاء الاصطناعي)
OPENAI_API_KEY=your-openai-api-key-here

# Google Earth Engine (اختياري - أقمار صناعية متقدمة)
GOOGLE_EARTH_ENGINE_API_KEY=your-google-earth-engine-api-key-here

# Copernicus (اختياري - أقمار صناعية)
COPERNICUS_CLIENT_ID=your-copernicus-client-id
COPERNICUS_CLIENT_SECRET=your-copernicus-client-secret
COPERNICUS_USERNAME=your-copernicus-username

# ===========================================
# BLOCKCHAIN
# ===========================================

# Infura (مطلوب - شبكة Ethereum)
NEXT_PUBLIC_INFURA_API_KEY=your-infura-api-key
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-infura-api-key
NEXT_PUBLIC_MAINNET_RPC_URL=https://mainnet.infura.io/v3/your-infura-api-key

# Etherscan (مطلوب - مستكشف البلوكشين)
NEXT_PUBLIC_ETHERSCAN_API_KEY=your-etherscan-api-key

# Blockchain Configuration
NEXT_PUBLIC_CONTRACT_ADDRESS=0xYourContractAddress
NEXT_PUBLIC_WALLET_ADDRESS=0xYourWalletAddress
NEXT_PUBLIC_NETWORK=sepolia
NEXT_PUBLIC_CHAIN_ID=11155111

# ===========================================
# GENERAL
# ===========================================

# Application
EMAIL=your-email@example.com
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3003

# ===========================================
# OPTIONAL - ADVANCED FEATURES
# ===========================================

# Email Service (اختياري)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage (اختياري)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# Analytics (اختياري)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring (اختياري)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# ===========================================
# DEVELOPMENT
# ===========================================

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Test Mode
TEST_MODE=false
MOCK_APIS=false

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# Uncomment for production
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://adham-agritech.com
# NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key